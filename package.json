{
  "name": "ready-in-a-giffy",
  "productName": "Ready in a Giffy",
  "description": "Create animated gifs from video files.",
  "version": "0.0.1",
  "author": "chris-schmitz <schmitz.chris@gmail.com>",
  "private": true,
  "main": "electron_app/main.js",
  "scripts": {
    "dev": "npm run electron & npm run watch:ui",
    "electron": "electron --debug .",
    "watch:ui": "cross-env NODE_ENV=development webpack --watch",
    "build:ui": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "package": "electron-packager . --overwrite --platform=all --icon=app_icons/app.icns"
  },
  "dependencies": {
    "vue": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "electron": "^1.4.14",
    "electron-packager": "^8.5.0",
    "electron-reload": "^1.1.0",
    "file-loader": "^0.9.0",
    "node-sass": "^4.3.0",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "vue-devtools": "^2.3.1-beta1",
    "vue-loader": "^10.0.0",
    "vue-template-compiler": "^2.1.0",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.9"
  }
}
